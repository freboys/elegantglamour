.slide{
	width:200rpx;
	height:100%;
	display:block;
	position:absolute;
	right:-210rpx;
	top:0;
	background-color:#fff;
	box-shadow:-5rpx 0rpx 10rpx #e29bbb;
	z-index:99;
}
.slidewrap{
	width:100%;
	height:100%;
	display:block;
	text-align: center;
}
.slide-list {
	height:80rpx;
	line-height:80rpx;
	display:block;
	font-size:32rpx;
	border-bottom:20rpx solid #f4f4f4;
}
.slide-img{
	height:100rpx;
	display:block;
}
.img{
	height:60rpx;
	width:60rpx;
	display:block;
	padding-left:30rpx;
	padding-top:20rpx;
}
.showslide {
	width:100rpx;
	height:100rpx;
	position:absolute;
	top:0;
	right:0;
	display:block;
	box-shadow:-5rpx 0rpx 10rpx #e29bbb;
	z-index:9;
}
.imgone{
	height:60rpx;
	width:60rpx;
	display:block;
	padding-left:20rpx;
	padding-top:20rpx;
}
.move {
	animation: mymove 0.5s;
	animation-fill-mode:forwards;
}
.showmove{
	animation: showmove 0.5s;
	animation-fill-mode:forwards;
}
.opacity{
    animation: myopacity 0.5s;
	animation-fill-mode:forwards;
}
.opacityy{
	animation: myopacityy 0.5s;
	animation-fill-mode:forwards;
}

@keyframes mymove
{
from {right: -210rpx;}
to {right:0rpx;}
}
@keyframes myopacity
{
from {opacity: 1;}
to {opacity: 0;}
}

@keyframes showmove
{
from {right: 0rpx;}
to {right:-210rpx;}
}
@keyframes myopacityy
{
from {opacity: 0;}
to {opacity: 1;}
}